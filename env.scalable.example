# PrepX Scalable Architecture Environment Configuration

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=prepx
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_REPLICATION_PASSWORD=your_replication_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Kafka Configuration
KAFKA_BROKERS=localhost:9092,localhost:9093,localhost:9094

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# InfluxDB Configuration
INFLUXDB_PASSWORD=your_influxdb_password_here
INFLUXDB_TOKEN=your_influxdb_token_here

# Monitoring Configuration
GRAFANA_PASSWORD=your_grafana_password_here
THANOS_PASSWORD=your_thanos_password_here

# API Configuration
API_PORT=3001
TRADING_PORT=3002
PORTFOLIO_PORT=3003
MARKET_DATA_PORT=3004
NOTIFICATION_PORT=3005

# Hyperliquid Configuration (for trading)
HYPERLIQUID_PK=0x_your_private_key_here
HYPERLIQUID_RPC_URL=https://api.hyperliquid.xyz/info

# Telegram Integration (Optional)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Trading Configuration
DEFAULT_MAX_BUDGET=1000
DEFAULT_PROFIT_GOAL=100
DEFAULT_MAX_POSITIONS=5

# Security Configuration
CORS_ORIGIN=https://prepx.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL Configuration (Production)
SSL_CERT_PATH=/etc/ssl/certs/prepx.crt
SSL_KEY_PATH=/etc/ssl/private/prepx.key

# Environment
NODE_ENV=production
LOG_LEVEL=info

# Performance Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=60000

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER_SESSION=86400
CACHE_TTL_MARKET_DATA=30
CACHE_TTL_PORTFOLIO=300

# Message Queue Configuration
KAFKA_CONSUMER_GROUP=trading-processor-group
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=true

# Load Balancer Configuration
LB_HEALTH_CHECK_INTERVAL=30
LB_HEALTH_CHECK_TIMEOUT=5
LB_HEALTH_CHECK_THRESHOLD=3

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Alerting Configuration
ALERT_MANAGER_URL=http://alertmanager:9093
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Feature Flags
ENABLE_TRADING=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_MACHINE_LEARNING=false

# Scaling Configuration
AUTO_SCALE_MIN_REPLICAS=2
AUTO_SCALE_MAX_REPLICAS=10
AUTO_SCALE_TARGET_CPU=70
AUTO_SCALE_TARGET_MEMORY=80

# Database Sharding Configuration
SHARD_COUNT=4
SHARD_KEY_MODULUS=4

# CDN Configuration
CDN_URL=https://cdn.prepx.com
CDN_CACHE_TTL=86400

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=prepx-backups
BACKUP_S3_REGION=us-east-1
