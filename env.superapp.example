# SuperApp Integration Environment Variables
# Copy this file to .env.local and configure for your SuperApp deployment

# SuperApp Configuration
NEXT_PUBLIC_SUPERAPP_DEPLOYMENT_TOKEN=your-deployment-token-here
NEXT_PUBLIC_SUPERAPP_BASE_URL=https://wallet.wapal.io

# Hyperliquid Configuration (for SuperApp mode)
HYPERLIQUID_TESTNET=true
HYPERLIQUID_RPC_URL=https://api.hyperliquid-testnet.xyz

# Trading Configuration
DEFAULT_MAX_BUDGET=1000
DEFAULT_PROFIT_GOAL=100
DEFAULT_MAX_POSITIONS=5

# API Server Configuration
API_PORT=3001
WEBSOCKET_PORT=3002
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3002

# SuperApp Mini-App Settings
NEXT_PUBLIC_APP_NAME=Perp-x Trading Bot
NEXT_PUBLIC_APP_SLUG=perp-x-trading
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered perpetual trading bot integrated with SuperApp wallet
