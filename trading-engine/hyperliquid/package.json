{
    "name": "hyperliquid-bot",
    "version": "1.0.0",
    "description": "Hyperliquid Trading Bot with PM2 deployment",
    "main": "index.ts",
    "scripts": {
        "start": "npx ts-node index.ts",
        "dev": "npx ts-node index.ts",
        "build": "tsc",
        "test": "echo \"Error: no test specified\" && exit 1",
        "test:restart": "npx ts-node test-restart.ts",
        "pm2:start": "pm2 start ecosystem.config.js --env production",
        "pm2:stop": "pm2 stop trading-bot3",
        "pm2:restart": "pm2 restart trading-bot3",
        "pm2:delete": "pm2 delete trading-bot3",
        "pm2:logs": "pm2 logs trading-bot3",
        "pm2:status": "pm2 status",
        "pm2:monit": "pm2 monit",
        "pm2:save": "pm2 save",
        "pm2:startup": "pm2 startup",
        "deploy": "./deploy.sh"
    },
    "keywords": [
        "hyperliquid",
        "trading",
        "bot",
        "cryptocurrency",
        "defi"
    ],
    "author": "Subash Mokshya",
    "license": "MIT",
